@article{vlasova2017optimizatsiya27177808,
address = {Москва},
annote = {Радиационные пояса Земли (РПЗ), открытые в конце 1950-х годов, имеют большой научный и практический интерес. Основные их характеристики в магнитно-спокойные периоды хорошо известны. Однако динамика РПЗ во время магнитных бурь и суббурь, особенно динамика релятивистских электронов внешнего пояса, когда потоки частиц РПЗ испытывают значительные временные вариации, изучена пока недостаточно. В настоящее время проводятся и планируются принципиально новые эксперименты, предназначенные для более полного изучения динамики РПЗ и оперативного контроля пространственно-энергетических распределений потоков частиц РПЗ. В данной работе, для космических аппаратов, предназначенных для измерений потоков электронов и протонов РПЗ на высотах от 0.5 до 10 тысяч км, рассматриваются и отбираются оптимальные варианты ориентации детекторов и параметров орбит.},
author = {Панасюк, М И and Подзолко, М В and Ковтюх, А С and Брильков, И А and Власова, Н А and Калегаев, В В and Оседло, В И and Тулупов, В И and Яшин, И В},
doi = {10.7868/S002342061606008X},
issn = {0023-4206},
journal = {Космические исследования},
number = {2},
pages = {85--93},
publisher = {Москва},
title = {{Оптимизация измерений потоков частиц радиационных поясов Земли}},
